(defmacro with-drawing
  "Evaluates body between begin-drawing and end-drawing calls"
  [& body]
  `(do
     (begin-drawing)
     ~@body
     (end-drawing)))

(defmacro with-shader-mode
  "Evaluates body between begin-shader-mode and end-shader-mode calls"
  [shader & body]
  `(do
     (begin-shader-mode ~shader)
     ~@body
     (end-shader-mode)))

